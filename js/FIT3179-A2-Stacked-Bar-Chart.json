{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": "container",
  "data": {
    "url": "https://raw.githubusercontent.com/Zhening-Wang/FIT3179/main/data/US%20Police%20Shooting.csv"
  },
  "params": [
    {
      "name": "Race_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Asian",
          "Black",
          "Hispanic",
          "Native American",
          "Other",
          "White"
        ],
        "labels": [
          "Show All",
          "Asian",
          "Black",
          "Hispanic",
          "Native American",
          "Other",
          "White"
        ],
        "name": "Race Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "Race_selection == null || datum.race == Race_selection"}
  ],
  "layer": [
    {
      "selection": { 
        "race_highlight": {
          "type": "multi", 
          "fields": ["race"], 
          "bind": "legend"
        } 
      },
      "mark": "bar",
      "encoding": {
        "x": {
          "timeUnit": "year",
          "field": "date",
          "type": "ordinal",
          "title": "Year",
          "axis":{
            "labelFont": "lato",
            "labelFontSize": 12,
            "titleFont": "lato",
            "titleFontSize": 14
          }
        },
        "y": {
          "aggregate": "count",
          "type": "quantitative",
          "title": "Number of Shooting",
          "axis":{
            "labelFont": "lato",
            "labelFontSize": 12,
            "titleFont": "lato",
            "titleFontSize": 14
          }
        },
      "color": {
        "field": "race",
        "type": "nominal",
        "legend": {
          "labelFont": "lato",
          "labelFontSize": 12,
          "titleFont": "lato",
          "titleFontSize": 14
        },
        "scale": {
          "domain": ["Asian", "Black", "Hispanic", "Native American", "Other", "White"],
            "range": ["#8da0cb", "#fc8d62", "#e78ac3", "#a6d854", "#ffd92f", "#66c2a5"]
        },
        "title": "Human Race"
      },
      "opacity": {
        "condition": {
          "selection": "race_highlight", 
          "value": 1
        },
        "value": 0.2 
      },
      "tooltip": [
        {"field": "name", "type": "nominal", "title": "Name"},
        {"field": "race", "type": "nominal", "title": "Race"},
        {"field": "age", "type": "quantitative", "title": "Age"},
        {"field": "gender", "type": "nominal", "title": "Gender"},
        {"field": "armed", "type": "nominal", "title": "Armed"}
      ]
      } 
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "bottom",
        "dx": 187.5,
        "dy": -8,
        "fontSize": 8,
        "font": "lato"
      },
      "encoding": {
        "text": {
          "field": "name", 
          "type": "nominal"
        },
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['name'] == 'Breonna Taylor' ",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ],
  "config": {
    "font": "lato"
  }
  
}
