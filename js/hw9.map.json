{
	"$schema": "https://vega.github.io/schema/vega-lite/v4.json",
	"title": "FIT3179 Homework 9 Sample Map",
	"width": 800,
	"height": 600,
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Zhening-Wang/FIT3179/main/data/ne_110m_admin_1_states_provinces.json",
        "format": {
        "type": "topojson", 
        "feature": "ne_110m_admin_1_states_provinces"
        }
	    },
      "projection": {
        "type": "albersUsa"
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      } 
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Zhening-Wang/FIT3179/main/data/fatal-police-shootings-data.csv"
      },
      "projection": {"type": "albersUsa"},
      "mark": "circle",
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"}
      },
      "size": {"value": 10},
      "color": {"value": "steelblue"}
      
    }	
  ]
    
}
